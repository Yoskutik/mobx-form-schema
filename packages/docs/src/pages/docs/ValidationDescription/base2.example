const schema = SignUpSchema.create();

console.log(schema.pinCode);  // ''
console.log(schema.errors);   // { pinCode: 'The field is required' }
console.log(schema.isValid);  // false

schema.pinCode = '123';
console.log(schema.errors);   // { pinCode: 'Should be longer than 4 characters' }
console.log(schema.isValid);  // false

schema.pinCode = '1234';
console.log(schema.errors);   // {}
console.log(schema.isValid);  // true

schema.pinCode = '123456789';
console.log(schema.errors);   // { pinCode: 'Should be shorter than 8 characters' }
console.log(schema.isValid);  // false