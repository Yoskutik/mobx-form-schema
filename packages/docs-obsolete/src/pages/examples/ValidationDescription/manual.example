import { FormSchema, validate } from '@yoskutik/mobx-form-schema';
import { observable } from 'mobx';
import { required, lengthBetween } from 'path/to/validators';

export class SignUpSchema extends FormSchema {
  protected static config = {
    manual: true,
  };

  @validate(required(), lengthBetween(4, 8))
  @observable pinCode = '';
}

const schema = SignUpSchema.create();

console.log(schema.isValid); // true

schema.validate('pinCode');
// you can also call validate() to validate entire form
console.log(schema.isValid); // false
console.log(schema.errors);  // { pinCode: 'The field is required' }