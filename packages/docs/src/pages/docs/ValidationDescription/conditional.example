import { FormSchema, validate } from '@yoskutik/mobx-form-schema';
import { observable } from 'mobx';
import { required, email } from 'path/to/validators';

const shouldValidateName = (_name: string, schema: SignUpSchema) =>
  schema.wantToShareName;

class SignUpSchema extends FormSchema {
  @validate(email()).if(Boolean) // or .if((email) => !!email)
  @observable email = '';

  @validate(required()).if(shouldValidateName)
  @observable name = '';

  @observable wantToShareName = true;
}