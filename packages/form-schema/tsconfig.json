{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["dom", "es2022"],
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "removeComments": false,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@yoskutik/form-schema/dist/enable-es-decorators-types": ["./src/enable-es-decorators-types"],
      "@yoskutik/form-schema/*": ["./src/*"],
      "@yoskutik/form-schema": ["./src"]
    }
  },
  "include": [
    "src",
    "metadata.d.ts"
  ],
  "exclude": [
    "src/enable-es-decorators-types.ts"
  ]
}
