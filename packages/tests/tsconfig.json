{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["dom", "es2022"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "tests",
    "globals.d.ts"
  ]
}
